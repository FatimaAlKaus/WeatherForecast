<Window x:Class="WeatherForecast.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding Source={StaticResource VML},Path=MainWindowVM}"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="1" Command="{Binding SendRequest}">press</Button>
        <StackPanel Grid.Column="1">
            <TextBlock Text="{Binding Report.Description}"></TextBlock>
            <TextBlock Text="{Binding Report.Temp}"></TextBlock>
            <TextBlock Text="{Binding Report.FeelsLike}"></TextBlock>
            <Image Width="50" Height="50" Source="{Binding Report.Icon}" Stretch="Fill"/>
            <TextBlock Text="{Binding Report.WindSpeed}"></TextBlock>
            <TextBlock Text="{Binding Report.CityName}"></TextBlock>
        </StackPanel>
        <TextBox Text="{Binding Zip,UpdateSourceTrigger=PropertyChanged}"></TextBox>
    </Grid>
</Window>
